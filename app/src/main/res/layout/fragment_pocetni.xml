<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FEFEFE"
    android:backgroundTintMode="src_over"
    android:foregroundTint="#FEFEFE"
    android:foregroundTintMode="src_over"
    tools:context=".PocetniFragment">

    <ImageView
        android:id="@+id/fragment_pocetni_slika"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fragment_pocetni"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:text="Čitajte Gorski vijenac Petra II Petrovića Njegoša na ovoj aplikaciji!"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pocetni_slika" />

    <TextView
        android:id="@+id/fragment_pocetni_textOpisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:text="U donjem meniju možete birati da čitate,birate stihove na osnovu trenutnog raspoloženja, obeležite neki stih i stavite ga na prigodnu pozadinu, i pročitati po koju zanimljivu priču i najlepšem vladiki!"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pocetni" />

    <TextView
        android:id="@+id/pocetni_fragment_materijal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Korišćen materijal iz knjige: Gorski Vijenac - Petar II Petrović Njegoš(napisana 1847. godine)"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pocetni_textOpisa" />
</androidx.constraintlayout.widget.ConstraintLayout>